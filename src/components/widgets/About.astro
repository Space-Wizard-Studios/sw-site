---
import { LoremIpsum } from 'lorem-ipsum';

const lorem = new LoremIpsum(
	{
		sentencesPerParagraph: {
			max: 10,
			min: 5,
		},
		wordsPerSentence: {
			max: 20,
			min: 10,
		},
	},
	'html'
);
---

<p class="text-5xl">
	<span>Paragrafo no</span>
	<span class="text-gradient bg-gradient-to-t from-sw-primary-300 to-sw-accent">index</span>
</p>
<br />
<div class="text-justify">
	<span set:html={lorem.generateParagraphs(7)}></span>
</div>
