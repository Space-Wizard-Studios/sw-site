---
import { Image } from '@astrojs/image/components';
import TeamCard from '@atoms/TeamCard';

import alex from '@images/team/alex_profile.png';
import danilo from '@images/team/danilo_profile.png';
import gustavo from '@images/team/gustavo_profile.png';
import rhayane from '@images/team/rhayane_profile.png';
import william from '@images/team/william_profile.png';

export interface Props {
	[props: string]: any;
}

const { ...props } = Astro.props as Props;
---

<div {...props}>
	<header>
		<h2 class="text-4xl font-black uppercase">
			<span>A tripulação</span>
		</h2>
		<h3 class="mb-12">
			<span class="text-gradient bg-gradient-to-t from-sw-navy-700 to-sw-flamingo">Nosso incrível time</span>
		</h3>
	</header>

	<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-16 text-justify my-16">
		<TeamCard
			client:load
			name="Alexandre Barbosa"
			roles={['Generalista de Áudio']}
			skills={['Composição', 'Prod. Musical', 'SFX']}
			links={{
				imdb: 'https://www.imdb.com/name/nm11223910/',
				linkedin: 'https://www.linkedin.com/in/alexandre-barbosa-083b83b4/',
				youtube: 'https://www.youtube.com/channel/UCYSb-3wJyK-L0E9YyHeqkiQ/',
			}}
		>
			<Image slot="photo" src={alex} alt="Profile Picture" />
		</TeamCard>

		<TeamCard
			client:load
			name="Danilo Nobre"
			roles={['Generalista 3D']}
			skills={['Modelagem 3D', 'Texturização', 'Rigging', 'Animação']}
			links={{
				linkedin: 'https://www.linkedin.com/in/danilo-nobre/',
			}}
		>
			<Image slot="photo" src={danilo} alt="Profile Picture" />
		</TeamCard>

		<TeamCard
			client:load
			name="Gustavo Arantes"
			roles={['Generalista 2D']}
			skills={['Concept Art', 'Ilustração']}
			links={{
				linkedin: 'https://www.linkedin.com/in/gustav-arantes/',
				portfolio: 'https://gustavarantes.myportfolio.com/',
			}}
		>
			<Image slot="photo" src={gustavo} alt="Profile Picture" />
		</TeamCard>

		<TeamCard
			client:load
			name="Rhayane Miranda"
			roles={['Social Media']}
			skills={['Criação', 'Analytics']}
			links={{
				linkedin: 'https://www.linkedin.com/in/rhayane-miranda/',
			}}
		>
			<Image slot="photo" src={rhayane} alt="Profile Picture" />
		</TeamCard>

		<TeamCard
			client:load
			name="William Magalhães"
			roles={['Programador Full Stack']}
			skills={['Backend', 'Frontend', 'Tech Artist']}
			links={{
				github: 'https://github.com/wbmagalhaes/',
				linkedin: 'https://www.linkedin.com/in/william-bernardes-magalhaes/',
			}}
		>
			<Image slot="photo" src={william} alt="Profile Picture" />
		</TeamCard>
	</section>
</div>
