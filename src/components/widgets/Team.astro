---
import TeamCard from '@atoms/TeamCard.astro';
export interface Props {
	[props: string]: any;
}

const { ...props } = Astro.props as Props;
---

<div {...props}>
	<header>
		<h1 class="font-black uppercase text-4xl">
			<span>A tripulação</span>
		</h1>
		<p class="text-2xl mb-8">
			<span class="text-gradient bg-gradient-to-t from-sw-primary-300 to-sw-flamingo">Nosso incrível time</span>
		</p>
	</header>

	<section class="grid grid-cols-2 lg:grid-cols-3 gap-16 text-justify my-16">
		<TeamCard />
		<TeamCard />
		<TeamCard />
		<TeamCard />
		<TeamCard />
	</section>
</div>
