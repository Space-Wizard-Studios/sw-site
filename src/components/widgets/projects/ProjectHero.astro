---
import { Image } from '@astrojs/image/components';

type Props = {
	src: string;
};

const { src } = Astro.props as Props;
---

<figure class="h-full w-full">
	<Image
		src={import(/* @vite-ignore */ `../../../assets/images/projects/${src}.png`)}
		class="w-full"
		fit="cover"
		aspectRatio="16/9"
		width="1200"
		format="webp"
		alt=""
	/>
</figure>
