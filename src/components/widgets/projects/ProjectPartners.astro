---
export type PartnersProps = {
	src: string;
	title: string;
	alt: string;
	description: string;
};

type Props = {
	partners: PartnersProps[];
	[props: string]: any;
};

const { partners, ...props } = Astro.props as Props;
---

<section {...props}>
	<h2>Devs</h2>
	<div class="flex w-full gap-4">
		{
			partners.map(({ src, title, alt, description }) => (
				<div>
					<img class="w-32 cover aspect-ratio-16/9" src={src} width="300" title={title} alt={alt} />
					<p>{description}</p>
				</div>
			))
		}
	</div>
</section>
