---
import { Image } from '@astrojs/image/components';

export type PartnersProps = {
	src: string;
	description: string;
};

type Props = {
	partners: PartnersProps[];
};

const { partners, ...props } = Astro.props as Props;
---

<section class="flex w-full gap-4 items-center justify-center py-8 spacewiz__text" {...props}>
	{
		partners.map(({ src, description }) => (
			<div>
				<Image
					class="w-32"
					src={import(/* @vite-ignore */ `../../../assets/images/projects/${src}.png`)}
					fit="cover"
					aspectRatio="16:9"
					width="300"
					format="webp"
					alt=""
				/>
				<p>{description}</p>
			</div>
		))
	}
</section>
