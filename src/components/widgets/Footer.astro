---
import { LoremIpsum } from 'lorem-ipsum';
import DividerArrowDown from '@atoms/DividerArrowDown.astro';

const lorem = new LoremIpsum(
	{
		sentencesPerParagraph: {
			max: 10,
			min: 5,
		},
		wordsPerSentence: {
			max: 20,
			min: 10,
		},
	},
	'html'
);
