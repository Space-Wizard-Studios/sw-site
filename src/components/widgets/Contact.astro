---
import { LoremIpsum } from 'lorem-ipsum';

const lorem = new LoremIpsum(
	{
		sentencesPerParagraph: {
			max: 10,
			min: 5,
		},
		wordsPerSentence: {
			max: 20,
			min: 10,
		},
	},
	'html'
);
export interface Props {
	[props: string]: any;
}

const { ...props } = Astro.props as Props;
---
<div {...props}>
	<h1 class="font-black uppercase text-5xl">
		<span>Entre em contato</span>
	</h1>
	<h2 class="text-2xl mb-6">
		<span class="text-gradient bg-gradient-to-t from-sw-primary-300 to-sw-accent">Nos conte uma hist√≥ria</span>
	</h2>

	<div class="text-justify mb-12">
		<span set:html={lorem.generateParagraphs(2)}></span>
	</div>
</div>
