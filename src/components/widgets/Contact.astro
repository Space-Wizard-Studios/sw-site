---
import { Image } from '@astrojs/image/components';
import contactImage from '@images/cosmonaut_suit.png';

export interface Props {
	[props: string]: any;
}

const { ...props } = Astro.props as Props;
---

<div {...props}>
	<header>
		<h2 class="text-4xl font-black uppercase">
			<span>Entre em contato</span>
		</h2>
		<h3 class="mb-12">
			<span class="text-gradient bg-gradient-to-t from-sw-navy-700 to-sw-flamingo">Nos conte uma história</span>
		</h3>
	</header>

	<section class="flex my-8 text-justify">
		<div class="w-full h-96 flex">
			<div class="w-full h-auto bg-sw-coal hidden lg:block lg:w-2/5 rounded-l-2xl overflow-hidden">
				<Image class="w-full h-full" fit="cover" format="webp" src={contactImage} alt="" />
			</div>
			<div class="w-full p-4 rounded-2xl lg:rounded-l-none shadow-md bg-sw-secondary-700 dark:bg-sw-primary-700">
				<p>
					Entre em contato através do endereço
					<a href="mailto:contato@spacewiz.dev?subject=Contato&body=Olá! Gostaria de entrar em contato.">contato@spacewiz.dev</a>.
				</p>
			</div>
		</div>
	</section>
</div>
