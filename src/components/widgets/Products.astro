---
import ProductCard from '@atoms/ProductCard.astro';

export interface Props {
	[props: string]: any;
}

const { ...props } = Astro.props as Props;
---

<div {...props}>
	<header>
		<h1 class="font-black uppercase text-5xl mb-12">
			<span>O que</span>
			<span class="text-gradient bg-gradient-to-t from-sw-primary-300 to-sw-flamingo">fazemos</span>
		</h1>
	</header>

	<section class="my-8 flex flex-col lg:flex-row gap-24 max-h-96 overflow-y-auto md:overflow-visible items-center">
		<ProductCard
			iconSrc="./models/products/tools.fbx"
			title="Games"
			subtitle="jogos 2D e 3D"
			description="desenvolvimento de <span class='spacewiz__text--accent'>jogos 2D ou 3D</span> em Unity Engine"
		/>
		<ProductCard
			iconSrc="./models/products/tools.fbx"
			title="Web"
			subtitle="sites interativos"
			description="desenvolvimento de <span class='spacewiz__text--accent'>experiências gamificadas</span> para Web"
		/>
		<ProductCard
			iconSrc="./models/products/tools.fbx"
			title="Apps"
			subtitle="aplicativos"
			description="desenvolvimento de <span class='spacewiz__text--accent'>aplicativos nativos</span> para mobile e desktop."
		/>
		<ProductCard
			iconSrc="./models/products/tools.fbx"
			title="Áudio e Música"
			subtitle=""
			description=""
		/>
	</section>
</div>