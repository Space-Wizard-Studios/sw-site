---
import { Icon } from 'astro-icon';
import ToggleTheme from '~/components/core/ButtonToggleTheme.astro';
import ToggleMenu from '~/components/core/ButtonToggleMenu.astro';
---

<header
	class="sticky top-0 z-40 flex-none mx-auto w-full md:backdrop-blur-sm border-b dark:border-b-0"
>
	<div class="w-full md:flex md:justify-between max-w-6xl align-middle">
		<div class="flex justify-between">
			<div class="flex flex-col md:flex-row md:self-center">spacewiz.dev</div>
			<div class="flex items-center md:hidden">
				<ToggleTheme />
				<ToggleMenu />
			</div>
		</div>
		<nav
			class="items-center w-full md:w-auto hidden md:flex text-secondary h-screen md:h-auto"
			aria-label="Main navigation"
			id="menu"
		>
			<ul
				class="flex flex-col md:flex-row md:self-center collapse w-full md:w-auto collapsed text-xl md:text-base"
			>
				<li>
					<a
						class="font-medium flex items-center transition duration-150 ease-in-out"
						href="#">Menu link</a
					>
				</li>
			</ul>
			<div class="md:self-center flex items-center mb-4 md:mb-0">
				<div class="hidden items-center md:flex">
					<ToggleTheme iconClass="w-5 h-5" />
					<a href="#"> Link Extra</a>
				</div>
			</div>
		</nav>
	</div>
</header>
