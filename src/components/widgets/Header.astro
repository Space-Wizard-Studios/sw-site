---
import { Icon } from 'astro-icon';
import ButtonToggleTheme from '~/components/core/ButtonToggleTheme.astro';
import ButtonToggleMenu from '~/components/core/ButtonToggleMenu.astro';
---

<header class="sticky top-0 z-40 w-full flex-none mx-auto md:backdrop-blur-sm shadow-md bg-sw-secondary dark:bg-sw-primary">
	<div class="py-4 px-4 lg:px-0 mx-auto w-full md:flex md:justify-between max-w-6xl">
		<div class="flex justify-between">
			<a class="flex items-center">
				<span class="self-center text-2xl font-extrabold text-sw-primary whitespace-nowrap dark:text-sw-secondary"
					>spacewiz.dev</span
				>
			</a>
			<div class="flex items-center md:hidden">
				<ButtonToggleTheme />
				<ButtonToggleMenu />
			</div>
		</div>

		<nav
			class="items-center w-full md:w-auto md:flex text-sw-primary dark:text-slate-200 h-screen md:h-auto"
			aria-label="Main navigation"
			id="menu"
		>
			<ul
				class="flex flex-col pt-8 md:pt-0 md:flex-row md:self-center collapse w-full md:w-auto collapsed text-xl md:text-base"
			>
				<li>
					<a
						class="font-medium hover:text-sw-primary dark:hover:text-sw-secondary px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href="#">In√≠cio</a
					>
				</li>
				<li>
					<a
						class="font-medium hover:text-sw-primary dark:hover:text-sw-secondary px-4 py-3 flex items-center transition duration-150 ease-in-out"
						href="#">Projetos</a
					>
				</li>
			</ul>
			<div class="md:self-center flex items-center mb-4 md:mb-0">
				<div class="hidden items-center md:flex">
					<ButtonToggleTheme />
				</div>
			</div>
		</nav>
	</div>
</header>
