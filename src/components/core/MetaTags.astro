---
import { AstroSeo } from '@astrolib/seo';
import { MetaSEO } from 'types/metaseo';
import { SITE } from '@/config.mjs';

export interface Props extends MetaSEO {
	dontUseTitleTemplate?: boolean;
}

const {
	title = SITE.name,
	description = SITE.description,
	image = SITE.defaultImage,

	canonical,

	nofollow = false,

	ogTitle = title,
	ogType = 'website',
} = Astro.props as MetaSEO;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" href="/favicon.svg" sizes="any" type="image/svg+xml" />

<AstroSeo
	title={title}
	description={description}
	canonical={String(canonical)}
	nofollow={nofollow}
	openGraph={{
		url: String(canonical),
		title: ogTitle,
		description: description,
		type: ogType,
		images: image
			? [
					{
						url: SITE.origin + image,
						alt: ogTitle,
					},
			  ]
			: undefined,
	}}
/>

<!-- Google Site Verification -->
<meta name="google-site-verification" content={SITE.googleSiteVerificationId} />

<!-- Google Tag Manager -->
<script type="text/partytown" src="./GoogleTagManager.js"></script>
<!-- End Google Tag Manager -->
