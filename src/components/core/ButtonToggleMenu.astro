---
import { Icon } from 'astro-icon';
const {
	label = 'Toggle Menu',
	className = 'rounded-lg text-sm p-2.5 inline-flex items-center relative sw-text',
	iconClass = 'w-6 h-6',
	iconName = 'tabler:menu',
} = Astro.props;
---

<button type="button" class={className} aria-label={label} data-sw-btn-toggle-menu>
	<Icon name={iconName} class={iconClass} optimize={false} />
</button>