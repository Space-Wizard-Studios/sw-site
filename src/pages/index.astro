---
import { SITE } from '~/config.mjs';
import Layout from '@layouts/HomeLayout.astro';

import Products from '@widgets/Products.astro';
import Contact from '@widgets/Contact.astro';
import About from '@widgets/About.astro';
import Team from '@widgets/Team.astro';

import DividerRect from '@atoms/DividerRect.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
};
---

<Layout>
	
	<Products class="max-w-6xl mx-auto px-8 sm:px-6 pt-4 relative z-20"/>
	<DividerRect class="w-full -mt-32 h-32 absolute z-10  bg-sw-secondary-700 dark:bg-sw-primary-700 "/>
	<About class="px-6 sm:px-6 py-8 md:px-8 shadow-md bg-sw-secondary-700 dark:bg-sw-primary-700 z-20"/>
	<Team class="max-w-6xl mx-auto py-8 px-8 sm:px-6"/>
	<Contact class="max-w-6xl mx-auto px-8 sm:px-6"/>
</Layout>
