---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import { LoremIpsum } from 'lorem-ipsum';

import Hero from '~/components/widgets/Hero.astro';

const meta = {
	title: SITE.title,
	description: SITE.description,
};

const lorem = new LoremIpsum(
	{
		sentencesPerParagraph: {
			max: 10,
			min: 5,
		},
		wordsPerSentence: {
			max: 20,
			min: 10,
		},
	},
	'html'
);
---

<Layout>
	<Hero/>
	<div class="max-w-6xl mx-auto pt-4 px-4 lg:px-0 relative">
		<p class="text-5xl">
			<span>Paragrafo no</span>
			<span class="text-gradient bg-gradient-to-t from-sw-primary-300 to-sw-accent">index</span>
		</p>
		<br />
		<div class="text-justify">
			<span set:html={lorem.generateParagraphs(7)}></span>
		</div>
	</div>
</Layout>
