---
import Layout from '@layouts/HomeLayout.astro';

import Products from '@widgets/Products.astro';
import Contact from '@widgets/Contact.astro';
import About from '@widgets/About.astro';
import Team from '@widgets/Team.astro';

import DividerRect from '@atoms/dividers/DividerRect.astro';

import { SITE } from '@/config.mjs';
import type { MetaSEO } from '@types/metaseo';

const meta: MetaSEO = {
	title: SITE.title,
	description: SITE.description,
	canonical: Astro.url.toString(),
	ogType: 'website',
};
---

<Layout {meta}>
	<section class="spacewiz__container mt-10">
		<Products class="relative z-20" />
	</section>

	<div class="shadow-md bg-sw-secondary-700 dark:bg-sw-primary-700 z-20">
		<DividerRect class="w-full -mt-16 h-16 absolute z-10 bg-sw-secondary-700 dark:bg-sw-primary-700" />
		<section class="spacewiz__container py-8">
			<About />
		</section>
	</div>

	<section class="spacewiz__container my-16">
		<Team />
	</section>

	<section class="spacewiz__container my-16">
		<Contact />
	</section>
</Layout>
