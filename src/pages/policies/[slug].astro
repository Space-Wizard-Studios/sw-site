---
import Layout from '@layouts/PoliciesPageLayout.astro';
import { getSlugFromURL } from '@core/Path';

import { components } from '@widgets/policies/components/Components.astro';

export async function getStaticPaths() {
	const all = await Astro.glob('../../data/policies/*.md');
	return all.map(({ file, ...page }) => {
		const slug = getSlugFromURL(file);
		return {
			params: {
				slug: slug,
			},

			props: {
				page: {
					...page,
				},
			},
		};
	});
}

const { page } = Astro.props;
---

<Layout>
	<page.Content components={components} />
</Layout>
