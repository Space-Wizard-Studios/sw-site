---
import '~/assets/styles/style.scss';

import MetaTags from '~/components/core/MetaTags.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Scripts from '~/components/core/Scripts.astro';

const { meta = {} } = Astro.props;
---

<!DOCTYPE html>
<html lang="ptbr" class="motion-safe:scroll-smooth 2xl:text-5">
	<head>
		<MetaTags {...meta} />
	</head>

	<body class="antialiased py-8 md:py-0 spacewiz__bg--reverse spacewiz__text align-middle">
		<Header />
		<slot />
		<Footer />
		<Scripts />
	</body>
</html>
