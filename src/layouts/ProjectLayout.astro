---
import Layout from '@layouts/BaseLayout.astro';

import ProjectHero from '@widgets/projects/ProjectHero.astro';
import ProjectCarousel from '@widgets/projects/ProjectCarousel.astro';
import ProjectPartners from '@widgets/projects/ProjectPartners.astro';
import type { ImageProps } from '@widgets/projects/ProjectCarousel.astro';
import type { PartnersProps } from '@widgets/projects/ProjectPartners.astro';

type Props = {
	hero?: string;
	carousel?: ImageProps[];
	partners?: PartnersProps[];
};

const { hero, carousel, partners } = Astro.props as Props;
---

<Layout>
	<div class="h-full spacewiz__container">
		<div class="spacewiz__text bg-sw-secondary-100 dark:bg-sw-primary-700 pb-8">
			{hero && <ProjectHero src={hero} />}

			<article class="project p-6">
				<slot />
			</article>

			{partners && <ProjectPartners partners={partners} />}
			{carousel && <ProjectCarousel images={carousel} class="px-8"/>}
		</div>
	</div>
</Layout>
