{
	"extends": "stylelint-config-standard-scss",
	"rules": {
		"indentation": "tab",
		"alpha-value-notation": "number",
		"at-rule-empty-line-before": [
			"always",
			{
				"except": ["blockless-after-same-name-blockless"],
				"ignore": ["first-nested"]
			}
		],
		"scss/at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": ["tailwind"]
			}
		]
	}
}
