---
import Layout from '@layouts/PageLayout.astro';
import type { MetaSEO } from 'types/metaseo';
import { config } from '@config.js';

import Hero from '@widgets/Hero.astro';

import Products from '@widgets/Products.astro';
import Contact from '@widgets/Contact.astro';
import About from '@widgets/About.astro';
import Team from '@widgets/Team.astro';

import DividerRect from '@common/dividers/DividerRect.astro';

const meta: MetaSEO = {
    title: config.title,
    description: config.description,
    canonical: Astro.url.toString(),
    og: {
        type: 'website',
    },
};
---

<Layout {meta}>
    <Hero />

    <div class='relative flex flex-col w-full h-full items-center'>
        <section class='sw-container'>
            <Products class='relative w-full z-30' />
        </section>

        <div class='flex flex-col z-20 w-full items-center shadow-md bg-surface-dim'>
            <DividerRect class='w-full -mt-16 h-16 absolute z-10 bg-surface-dim' />
            <section class='sw-container'>
                <About />
            </section>
        </div>

        <section class='sw-container'>
            <Team />
        </section>

        <!-- <section class='my-16'>
            <Contact />
        </section> -->
    </div>
</Layout>
