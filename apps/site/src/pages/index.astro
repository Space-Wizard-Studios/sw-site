---
import Layout from '@layouts/PageLayout.astro';

import type { MetaSEO } from 'types/metaSEO';
import { config } from '@config.js';

import { Hero, Products, Team, Contact } from '@widgets/Home/Home.astro';
import { SiteStar } from '@icons/Brand';

const meta: MetaSEO = {
    title: config.title,
    description: config.description,
    canonical: Astro.url.toString(),
    og: {
        type: 'website',
    },
};
---

<Layout {meta}>
    <Hero />
    <div class='relative flex flex-col bg-surface-bright z-10'>

        <section class='flex flex-col w-full md:sticky top-0 py-24'>
            <div class='sw-container flex flex-col space-y-10 z-10'>
                <header class='text-center md:text-right'>
                    <h2 class='sw-display text-primary pb-2'>
                        Sua história, nossa magia. 
                    </h2>
                    <h3 class='sw-pulse from-primary to-tertiary'>
                       Trazemos suas ideias de apps, jogos e sites à vida.
                    </h3>
                </header>
            </div>
        </section>

        <section class='relative flex flex-col w-full py-12 overflow-visible bg-gradient-to-b from-transparent to-surface-bright'>
            <div class='sw-container flex flex-col space-y-10 z-20'>
                <header class='flex flex-col space-y-4'>
                    <h2 class='uppercase text-on-surface'>Nossos serviços</h2>
                    <h3 class='sw-pulse from-primary to-tertiary'>Desenvolvemos ideias</h3>
                </header>
                <Products />
            </div>
            <div class='sw-halftone absolute bottom-0 w-full h-24 md:h-56 text-primary bg-surface-dim' 
            style="clip-path: polygon(0 0, 100% 100%, 0 100%);" />
        </section>
        

        <section class='sw-halftone relative w-full bg-surface-dim py-12 text-primary'>
            <div class='sw-container flex flex-row mx-auto space-y-10'>
                <div class='grid auto-rows-fr grid-cols-1 md:grid-cols-2'>
                    <div class='flex flex-col space-y-4'>
                        <header class='flex flex-col space-y-2'>
                            <h2 class='uppercase text-on-surface'>Sobre nós</h2>
                            <h3 class='sw-pulse from-primary to-tertiary'>
                                ❤ Encantamos com tecnologia e criatividade
                            </h3>
                        </header>
                        <div class='text-on-surface'>
                            <div class='flex flex-col space-y-2'>
                                <p>Transformamos ideias em experiências audiovisuais que cativam.</p>
                                <p>
                                    Combinamos tecnologia, criatividade e interatividade para criar conteúdos imersivos
                                    que conectam pessoas e marcas de forma autêntica, emocional e inovadora.
                                </p>
                            </div>
                        </div>
                    </div>
                    <figure
                        class='flex flex-row justify-center md:justify-end items-center text-on-surface fill-on-surface'
                    >
                        <SiteStar className='w-32 h-32' />
                    </figure>
                </div>
            </div>
            
        </section>

        <section class='sw-halftone relative flex flex-col w-full bg-surface-dim text-primary py-12'>
            <div class='sw-container flex flex-col space-y-10'>
                <div class='flex flex-col space-y-4'>
                    <header class='flex flex-col space-y-2'>
                        <h2 class='uppercase text-on-surface'>Quem somos</h2>
                        <h3 class='sw-pulse from-primary to-tertiary'>Essa é a nossa tripulação</h3>
                    </header>
                    <Team />
                </div>
            </div>
        </section>

        <section class='relative flex flex-col w-full bg-surface-bright'>
            <div class='sw-halftone relative bottom-0 w-full h-24 md:h-56 bg-surface-dim text-primary z-20' 
                style="clip-path: polygon(100% 100%, 100% 0, 0 0);">
            </div>
        </section>
            
        <section class='relative flex flex-col w-full pb-12 z-20 bg-surface-bright'>
            <div class='sw-container flex flex-col space-y-10'>
                <div class='flex flex-col space-y-4'>
                    <header class='flex flex-col space-y-2'>
                        <h2 class='uppercase text-on-surface'>Entre em contato</h2>
                        <h3 class='sw-pulse from-primary to-tertiary'>Queremos ouvir a sua história</h3>
                    </header>
                    <Contact />
                </div>
            </div>
        </section>
    </div>
</Layout>
