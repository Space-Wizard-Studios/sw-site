---
import Layout from '@layouts/PageLayout.astro';

// Define the color components
const ColorBox = ({ bg, text }) => {
    return `<div class='flex flex-row w-full p-4 ${bg} ${text} rounded-lg justify-between items-center'>
    <p>${bg}</p>
    <p>${text}</p>
  </div>`;
};

// Define specific color components
const PrimaryBox = ({ className = '' }) => {
    return ColorBox({ bg: 'bg-primary', text: 'text-on-primary' });
};

const SecondaryBox = ({ className = '' }) => {
    return ColorBox({ bg: 'bg-secondary', text: 'text-on-secondary' });
};

const AccentBox = ({ className = '' }) => {
    return ColorBox({ bg: 'bg-accent', text: 'text-on-accent' });
};
---

<Layout>
    <div class='flex flex-col w-full justify-center items-center gap-4'>
        <div class='flex flex-col w-full p-4 gap-4 bg-surface-dim text-on-surface rounded-lg justify-between'>
            <p>bg-surface-dim</p>
            <p>text-on-surface</p>

            <div class='flex flex-row w-full gap-4'>
                <div class='flex-1'>
                    <Fragment set:html={PrimaryBox({})} />
                </div>
                <div class='flex-1'>
                    <Fragment set:html={SecondaryBox({})} />
                </div>
                <div class='flex-1'>
                    <Fragment set:html={AccentBox({})} />
                </div>
            </div>

        </div>

        <div class='flex flex-col w-full p-4 gap-4 bg-surface text-on-surface rounded-lg justify-between'>
            <p>bg-surface</p>
            <p>text-on-surface</p>

            <div class='flex flex-col w-full gap-4 bg-primary-container text-on-primary-container p-4 rounded-lg'>
                <div class='flex flex-col w-full gap-4'>
                    <p>bg-primary-container</p>
                    <p>text-on-primary-container</p>
                    <div class='flex flex-row w-full gap-4'>
                        <div class='flex-1'>
                            <Fragment set:html={PrimaryBox({})} />
                        </div>
                        <div class='flex-1'>
                            <Fragment set:html={SecondaryBox({})} />
                        </div>
                        <div class='flex-1'>
                            <Fragment set:html={AccentBox({})} />
                        </div>
                    </div>
                </div>
            </div>

            <div class='flex flex-col w-full gap-4 bg-secondary-container text-on-secondary-container p-4 rounded-lg'>
                <div class='flex flex-col w-full gap-4'>
                    <p>bg-secondary-container</p>
                    <p>text-on-secondary-container</p>
                    <div class='flex flex-row w-full gap-4'>
                        <div class='flex-1'>
                            <Fragment set:html={PrimaryBox({})} />
                        </div>
                        <div class='flex-1'>
                            <Fragment set:html={SecondaryBox({})} />
                        </div>
                        <div class='flex-1'>
                            <Fragment set:html={AccentBox({})} />
                        </div>
                    </div>
                </div>
            </div>

            <div class='flex flex-col w-full gap-4 bg-accent-container text-on-accent-container p-4 rounded-lg'>
                <div class='flex flex-col w-full gap-4'>
                    <p>bg-accent-container</p>
                    <p>text-on-accent-container</p>
                    <div class='flex flex-row w-full gap-4'>
                        <div class='flex-1'>
                            <Fragment set:html={PrimaryBox({})} />
                        </div>
                        <div class='flex-1'>
                            <Fragment set:html={SecondaryBox({})} />
                        </div>
                        <div class='flex-1'>
                            <Fragment set:html={AccentBox({})} />
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class='flex flex-col w-full p-4 gap-4 bg-surface-bright text-on-surface rounded-lg justify-between'>
            <p>bg-surface-bright</p>
            <p>text-on-surface</p>

            <div class='flex flex-row w-full gap-4'>
                
                <div class='flex-1'>
                    <Fragment set:html={PrimaryBox({})} />
                </div>

                <div class='flex-1'>
                    <Fragment set:html={SecondaryBox({})} />
                </div>

                <div class='flex-1'>
                    <Fragment set:html={AccentBox({})} />
                </div>

            </div>

        </div>
    </div>
</Layout>
