---
import ButtonToggleTheme from '@common/ButtonToggleTheme';
import { SiteLogo } from '@icons/Brand';

import { cn } from '@helpers/cn';

export interface Props {
    className?: string;
}

const { className } = Astro.props as Props;
---

<header
    class={cn('sticky top-0 z-50',
        'sw-animation sw-root-scroll sw-size-down', 
        'h-24 min-h-10 transition-all flex flex-col w-full py-4 items-center justify-center',
        'bg-surface-bright/85 backdrop-blur-md text-brand shadow-lg',
        className,
     )}
    style='--height-down-to: 2.5rem; --width-down-to: 100%;'
>
    <nav class='sw-container flex flex-row justify-between items-center'>
        <h1 class="flex flex-row w-full "
        >
        <a class={cn(
            'sw-animation sw-root-scroll sw-size-down',
        'w-48 hover:scale-105 transition-all text-primary')} 
        href='/' 
        style="--width-down-to: 8rem;"
        >
                <span class='sr-only'>Space Wizard Studios</span>
                <SiteLogo client:idle />
            </a>
        </h1>
        <ButtonToggleTheme  className='sw-animation sw-root-scroll sw-scale-down' client:visible />
    </nav>
</header>
