---
import SimpleCarousel from '@common/SimpleCarousel';
import type { CarouselProps } from '@common/SimpleCarousel';

export type ImageProps = {
	src: string;
	title: string;
	description: string;
};

type Props = CarouselProps & {
	[props: string]: any;
};

const { images, ...props } = Astro.props as Props;
---

<figure {...props}>
	<h2 class="py-4 spacewiz__text--accent">Galeria</h2>
	<SimpleCarousel images={images} client:visible />
</figure>
