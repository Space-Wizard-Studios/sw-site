---
import { marked } from 'marked';
import type { ProcessedProject } from '@lib/collections/projectHelpers';

export interface Props {
    project: ProcessedProject;
}

const {
    project,
} = Astro.props as Props;

const content = project.data.content;
const html = marked.parse(content);
---

<section class='sw-halftone relative w-full bg-surface-dim pb-12 text-primary'>
    <div class='sw-container py-12 md:py-16'>
        <article class='text-on-surface space-y-4'>
            <Fragment set:html={html} />
        </article>
    </div>
</section>