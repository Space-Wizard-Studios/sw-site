---
import heroImageMobile from '/public/images/hero_sm.png';
import heroImageDesktop from '/public/images/hero_md.png';
import DividerWave from '@common/dividers/DividerWave.astro';

export interface Props {
    className?: string;
}

const { ...props } = Astro.props as Props;
---

<section>
    <div class='flex flex-col relative w-full h-screen overflow-hidden'>
        <picture>
            <source media='(max-width: 767px)' srcset={heroImageMobile.src} />
            <source media='(min-width: 768px)' srcset={heroImageDesktop.src} />
            <img
                src={heroImageDesktop.src}
                alt='Banner da nossa mascote no espaÃ§o.'
                class='w-screen h-screen object-cover'
                loading='eager'
            />
        </picture>
        <DividerWave class='absolute w-full bottom-0 text-surface' />
    </div>
</section>
