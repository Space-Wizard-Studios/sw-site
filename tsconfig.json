{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"lib": [
			"ES2023",
			"ESNext",
			"DOM",
			"WebWorker"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "dist",
		"strict": true,
		"target": "es2023",
		"types": [
			"astro/client"
		],
		"allowJs": true,
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			},
		],
		"verbatimModuleSyntax": true,
		"paths": {
			"@styles/*": [
				"src/assets/styles/*"
			],
			"@images/*": [
				"src/assets/images/*"
			],
			"@icons/*": [
				"src/assets/icons/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@common/*": [
				"src/components/common/*"
			],
			"@widgets/*": [
				"src/components/widgets/*"
			],
			"@components/*": [
				"src/components/*"
			],
			"@content/*": [
				"src/content/*"
			],
			"@layouts/*": [
				"src/layouts/*"
			],
			"@hooks/*": [
				"src/hooks/*"
			],
			"types/*": [
				"src/types/*"
			],
			"@*": [
				"src/*"
			]
		}
	}
}